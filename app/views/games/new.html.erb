<div class="game_card">
  <div>
    <h1>New Game</h1>
  </div>
  <div class="show_letters">
    <% @letters.each do |letter| %>
      <p class ="blue_square"> <%= letter %> </p>
    <% end %>
  </div>
  <p>What is the longest word you can find?</p>
  <form action="/score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="input-group">
        <input class="form-control" type="text" name="word">
        <input class="form-control" type="hidden" name="letters" value=<%= @letters.join %>>
        <input class="btn btn-primary" type="submit" value="play">
      </div>
  </form>
</div>
